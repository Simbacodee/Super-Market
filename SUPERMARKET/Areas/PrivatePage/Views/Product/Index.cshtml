@using PagedList.Mvc;
@using SUPERMARKET.Models
@using PagedList;
@model PagedList.PagedList<SUPERMARKET.Models.SanPham>
@helper Truncate(string input, int length)
{
    if (input.Length < length)
    {
        @input

    }
    else
    {
        @input.Substring(0, length)<text>...</text>
    }
}

@{
    ViewBag.Title = "Index";
}
<style>
    .imgSP {
        margin: 0 auto;
        max-width: 230px;
        max-height: 125px;
        width: auto;
        height: auto;
    }
</style>

<h2>Quản lý sản phẩm</h2>


<table class="table" border="1">
    <tr>
        <th style="width:200px">
            Tên sản phẩm
        </th>
        <th style="width:50px">
            Hình sản phẩm
        </th>
        <th style="width:300px">
            Nội dung tóm tắt
        </th>

        <th style="width:100px">
            Đơn vị
        </th>
        <th style="width:100px">
            Đã duyệt
        </th>
        <th style="width:100px">
            Gía bán
        </th>
        <th style="width:100px">
            Giảm giá
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tenSP)
            </td>
            <td>
                <img class="imgSP" src="@Url.Content("~/" + item.hinhDD)"
            </td>
            <td>
                @Truncate(item.ndTomTat, 100)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.dvt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.daDuyet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.giaBan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.giamGia)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.maSP }) |
                @Html.ActionLink("Details", "Details", new { id = item.maSP }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.maSP })
            </td>
        </tr>
    }

</table>
Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount;
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>
<style>
    .MenuTrang li {
        display: inline;
    }

    .pagination li a {
        padding: 10px;
        color: #000;
    }
</style>