@model SUPERMARKET.Models.KhachHang
@using SUPERMARKET.Models;
@{
    Layout = null;
    CartShop x = ViewData["Cart"] as CartShop;
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/Checkout.css" />
</head>

<body>

    <h2> Checkout Form</h2>
    @using (Html.BeginForm("SaveToDataBase", "CheckOut", FormMethod.Post))
    {
        <div class="row">
            <div class="col-50">
                <div class="container">
                    <form action="/action_page.php">

                        <div class="row">
                            <div class="col-50">
                                <h3>Billing Address</h3>
                                <label for="fname"><i class="fa fa-user"></i> Full Name</label>
                                @Html.TextBoxFor(m => m.tenKH, new { @class = "form-control", @placeholder = "Display Name" })
                                <label for="email"><i class="fa fa-envelope"></i> Email</label>
                                @Html.TextBoxFor(m => m.email, new { @class = "form-control", @placeholder = "john@example.com" })
                                <label for="adr"><i class="fa fa-address-card-o"></i> Address</label>
                                @Html.TextBoxFor(m => m.diaChi, new { @class = "form-control", @placeholder = "542 W. 15th Street" })
                                <label for="ngaySinh"><i class="fa fa-user"></i> BOD</label>
                                @Html.TextBoxFor(m => m.ngaySinh, new { @class = "form-control", @type = "date" })
                                <label for="soDT"> <i class="fa fa-phone"></i> Phone Number</label>
                                @Html.TextBoxFor(m => m.soDT, new { @class = "form-control", @placeholder = "Your phone number" })
                                <div class="row">
                                    <a href="@Url.Action("Index","CartShop")" class="btn btn-default" style="text-decoration:none;">Back to cart</a>

                                </div>
                            </div>

                            <div class="col-50">
                                <h3>Payment</h3>
                                <label for="fname">Accepted Cards</label>
                                <div class="icon-container">
                                    <i class="fa fa-cc-visa" style="color:navy;"></i>
                                    <i class="fa fa-cc-amex" style="color:blue;"></i>
                                    <i class="fa fa-cc-mastercard" style="color:red;"></i>
                                    <i class="fa fa-cc-discover" style="color:orange;"></i>
                                </div>
                                <label for="cname">Name on Card</label>
                                <input type="text" id="cname" name="cardname" placeholder="John More Doe">
                                <label for="ccnum">Credit card number</label>
                                <input type="text" id="ccnum" name="cardnumber" placeholder="1111-2222-3333-4444">
                                <label for="expmonth">Exp Month</label>
                                <input type="text" id="expmonth" name="expmonth" placeholder="September">
                                <div class="row">
                                    <div class="col-50">
                                        <label for="expyear">Exp Year</label>
                                        <input type="text" id="expyear" name="expyear" placeholder="2018">
                                    </div>
                                    <div class="col-50">
                                        <label for="cvv">CVV</label>
                                        <input type="text" id="cvv" name="cvv" placeholder="352">
                                    </div>
                                </div>
                            </div>

                        </div>
                        <label>
                            <input type="checkbox" checked="checked" name="sameadr"> Shipping address same as billing
                        </label>
                        <input type="submit" value="Continue to checkout" class="btn btn-success">
                    </form>
                </div>
            </div>

        </div>
    }


</body>

</html>
